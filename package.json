{
  "name": "playwright_cucumber_automation",
  "version": "2.0.0",
  "description": "Sauce labs website frontend test automation suite using playwright and cucumber",
  "main": "index.js",
  "scripts": {
    "api": "set DEBUG=pw:api & cucumber-js",
    "build": "rimraf build && npm run format && npm run lint && tsc && npm run cucumber-check",
    "cucumber-check": "cucumber-js features/**/*.feature --dry-run --require env/set-environment-variables.ts --require world/custom-world.ts --require step-definitions/**/*.ts --require hooks/**/*.ts  --require-module ts-node/register --format-options \"{\\\"snippetInterface\\\": \\\"async-await\\\"}\" --format summary --format progress --format progress-bar  --publish-quiet",
    "debug": "set PWDEBUG=1 & set DEBUG=pw:api & cucumber-js --tags @only",
    "video": "set PWVIDEO=1 & cucumber-js",
    "eslint-fix": "eslint ./ --ext .js,.ts,.tsx --fix",
    "eslint-init": "eslint --init",
    "format": "prettier --write \"**/*.{ts,tsx,css,html}\" ",
    "lint": "eslint ./ --ext .js,.ts,.tsx --format visualstudio --no-color --report-unused-disable-directives",
    "only": "npm run debug -- --tags @only",
    "report": "open reports/report.html",
    "steps-usage": "cucumber-js features/**/*.feature --dry-run",
    "test": "cucumber-js",
    "test:parallel": "cucumber-js --parallel=4",
    "docker": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:latest /bin/bash",
    "allure": "allure serve reports/allure-results",
    "debug:ios": "set BROWSER=ios & npm run debug",
    "test:ios": "set BROWSER=ios & npm run test",
    "ci": "HEADLESS=1 cucumber-js --parallel=2 --retry=1"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Ten10",
  "license": "ISC",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "dependencies": {
    "@cucumber/html-formatter": "21.3.1",
    "@cucumber/messages": "^24.1.0",
    "@cucumber/pretty-formatter": "1.0.1",
    "@playwright/test": "^1.42.1",
    "@types/fs-extra": "11.0.4",
    "cucumber-console-formatter": "1.0.0",
    "cucumber-html-reporter": "7.1.1",
    "cucumber-to-junit": "^0.1.3",
    "dotenv": "^16.4.5",
    "jsdom": "^24.0.0",
    "libphonenumber-js": "^1.10.59",
    "pixelmatch": "5.3.0",
    "pngjs": "7.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.2",
    "@types/expect": "24.3.0",
    "@types/fs-extra": "11.0.4",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "4.17.0",
    "@types/node": "^20.12.3",
    "@types/pixelmatch": "5.2.6",
    "@types/pngjs": "6.0.4",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "allure-cucumberjs": "2.0.0-beta.18",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "11.2.0",
    "open": "10.1.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "standard-version": "9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
